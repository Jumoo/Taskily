@model TaskilyWeb.Models.Survey

@{
    ViewBag.Title = "Add Tasks";
    Layout = "~/Views/Survey/_layoutNewWizard.cshtml";
    ViewBag.HelpContent = "taskily/new-survey/tasks";

}

@using( Html.BeginForm() )
{
    @Html.AntiForgeryToken();
            
    <div class="form-group">
        @Html.LabelFor(m => m.Tasks)
        @Html.TextArea("Tasks", "", 20, 50, new { @class = "form-control input-lg task-list", @required = "required" })
        <span class="help-block">The things you want your user to pick from - one per line.</span>
    </div>
            
    <div class="form-group">
        @Html.LabelFor(m => m.TaskCount)
        @Html.TextBoxFor(m => m.TaskCount, new { @class="form-control input-lg" })
        <span class="help-block">Number of tasks user will have to select.</span>
    </div>
            
    @Html.HiddenFor(m => m.ID)
    @Html.HiddenFor(m => m.OrganisationID)
            
    <div class="form-group">
        <input type="submit" value="Add Tasks" class="btn btn-primary btn-lg" />
    </div>
}

