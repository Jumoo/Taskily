@model TaskilyWeb.Models.Response

@{
    ViewBag.Title = "draw";
    Layout = "~/Views/Response/_layoutpublic.cshtml";

   
}
@using (Html.BeginForm())
    {
        <input type="hidden" name="ID" value="@Model.ID" />
<div class="full-page container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="page-header">
                <h1>@ViewBag.Heading</h1>
            </div>
            <p>
                @Html.Raw(@ViewBag.Summary)
            </p>
            <div class="form-group">
                <label for="name">Your Name</label>
                <input class="form-control input-lg" id="name" name="name" />
                <span class="help-block"></span>
            </div>
            <div class="form-group">
                <label for="email">Email Address</label>
                <input class="form-control input-lg" id="email" name="email" />
                <span class="help-block">e.g. fred@somewhere.com</span>
            </div>

            @if ( ViewBag.Marketing )
            { 
            <div class="form-group">
                <label class="draw-contact">
                    <input type="checkbox" name="contact" />
                    @Html.Raw(@ViewBag.MarketingMsg)
                </label>
            </div>
            }
            <div class="form-group">
                <input type="submit" value="Finish" class="btn btn-primary btn-lg" />                
                @Html.ActionLink("Skip >", "Complete", null, new { @class = "btn btn-lg btn-info" })
            </div>
        </div>
    </div>
</div>
}